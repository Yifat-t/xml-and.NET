@model IEnumerable<xmlBooks.Models.Book>
@{
    ViewData["Title"] = "Books";
}
<h1>Books</h1>

<a class="btn btn-default" asp-action="Create">Add a book</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Title</th>
            <th>FirstName</th>
            <th>LastName</th>
        </tr>

    </thead>
    <tbody>
        @foreach(var item  in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => item.ID)</td>
            <td>@Html.DisplayFor(m => item.Title)</td>
            <td>@Html.DisplayFor(m => item.FirstName)</td>
            <td>@Html.DisplayFor(m => item.LastName)</td>


        </tr>

        }
    </tbody>
</table> 
